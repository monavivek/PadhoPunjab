        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:padding="20dp"-->
        <!--android:id="@+id/videoview"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:text="watch video"/>-->


</RelativeLayout>