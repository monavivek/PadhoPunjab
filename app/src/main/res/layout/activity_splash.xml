       android:textColor="#000"
        android:background="#fff"
        android:text="Padho punjab padhao punjab "
        android:id="@+id/text"/>



    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loding"
        android:layout_below="@+id/text"
